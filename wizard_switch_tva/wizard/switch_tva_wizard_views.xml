<?xml version="1.0"?>
<odoo>
    <!-- Record for the switch TVA wizard form view -->
    <record id="switch_tva_wizard_view_form" model="ir.ui.view">
        <field name="name">switch.tva.wizard.view.form</field>
        <field name="model">switch.tva.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Switch tva wizard">
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <field name="company_id" invisible="1"/>
                         <!-- First TVA field with domain filtering the available tax IDs passed in context -->
                        <field name="first_tva" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',context.get('default_first_tva'))]" />
                          <!-- Second TVA field -->
                        <field name="second_tva" options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>
                    <footer>
                        <!-- Confirm button to execute the action on the wizard -->
                        <button name="button_confirm" string="Confirm" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

     <!-- Action to open the switch TVA wizard -->
    <record id="action_switch_tva" model="ir.actions.act_window">
        <field name="name">switch tva wizard</field>
        <field name="res_model">switch.tva.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="switch_tva_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
