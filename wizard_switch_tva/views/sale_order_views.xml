<?xml version="1.0"?>
<odoo>
    <!-- Inherit the sale.order form view to add the "Switch TVA" button, visible only in 'draft' or 'sent' states. -->
    <record id="inherit_sale_order_form_view" model="ir.ui.view">
        <field name="name">inherit.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <!--Added Switch TVA button after cancel button-->
            <button name="action_cancel" position="after">
                <button name="action_switch_tva" invisible="state not in ('draft','sent')" type="object"
                        string="Switch TVA"/>
            </button>
        </field>
    </record>
</odoo>

