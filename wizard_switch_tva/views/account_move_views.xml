<?xml version="1.0"?>
<odoo>
    <!-- Inherit the account.move form view to add the "Switch TVA" button, visible only in 'draft' or 'sent' states. -->
    <record id="inherit_account_move_view_form" model="ir.ui.view">
        <field name="name">inherit.account.move.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <!--Added Switch TVA button after cancel button-->
            <button name="button_cancel" position="after">
                <button name="action_switch_tva" invisible="state not in ('draft','sent')" type="object"
                        string="Switch TVA"/>
            </button>
        </field>
    </record>
</odoo>


