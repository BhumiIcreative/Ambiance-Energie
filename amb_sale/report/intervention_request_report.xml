<odoo>
  <data>
    <report
      id="intervention_request_report"
      model="sale.order"
      string="Demande d'intervention"
      report_type="qweb-pdf"
      name="amb_sale.report_intervention_request"
      file="amb_sale.report_intervention_request"
      paperformat="amb_sale.custom_intervention_request_report_format"
    />

    <template id="intervention_request_layout" t-name="amb_sale.intervention_request_layout">
      <t t-if="not o" t-set="o" t-value="doc"/>

      <t t-if="not company">
          <!-- Multicompany -->
          <t t-if="company_id">
              <t t-set="company" t-value="company_id"/>
          </t>
          <t t-elif="o and 'company_id' in o">
              <t t-set="company" t-value="o.company_id.sudo()"/>
          </t>
          <t t-else="else">
              <t t-set="company" t-value="res_company"/>
          </t>
      </t>
      <div class="header"/>

      <div class="article">
        <t t-raw="0"/>
      </div>

       <div class="footer" style="font-size:15px;">
        <div style="position:relative;font-size:12px;">
            <div class="row mt-1 border border-dark">
                <div class="col-6">
                    <div class="row">
                        <div class="col-4">
                            <strong>Intervention du:</strong>
                        </div>
                        <div class="col-3 text-center">
                            <strong>/</strong>
                        </div>
                        <div class="col-4">
                            <strong>/</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <strong>
                                <u>Heures de fonctionnement:</u>
                            </strong>
                        </div>
                    </div>
                    <div class="row"  style="height:200px">
                        <div class="col mb-5">
                            <strong>
                                <u>Descriptif de l'intervention:</u>
                            </strong>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col">
                            <strong>Technicien:</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <br/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-5">
                            <strong>
                                <u>Nombre d'allumages:</u>
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-7 border border-dark">
                    <div class="row">
                        <div class="col">
                            <strong>Total T.T.C:</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <strong>Net à payer en Euros:</strong>
                        </div>
                    </div>
                    <div class="row mt-1 mb-1">
                        <div class="col-3">
                            <strong>Chèque</strong>
                        </div>
                        <div class="col-3">
                            <strong>Espèces</strong>
                        </div>
                        <div class="col-6">
                            <strong>A réception de facture</strong>
                        </div>
                    </div>
                    <div class="row mt-1 mb-1 border-top border-dark">
                        <div class="col-4">
                            <strong>Pas satisfait
                                <input type="checkbox"/>
                            </strong>
                        </div>
                        <div class="col-4">
                            <strong>Satisfait
                                <input type="checkbox"/>
                            </strong>
                        </div>
                        <div class="col-4">
                            <strong>Très satisfait
                                <input type="checkbox"/>
                            </strong>
                        </div>
                    </div>
                </div>
                <div class="col-5 border border-dark">
                    <h5>
                        <strong>Signature Client:</strong>
                    </h5>
                    <strong style="font-size:12px;">"Bon pour acceptation de travaux"</strong>
                </div>
            </div>
        </div>



        <div class="text-center" style="border-top: 1px solid black;font-size:12px;">
            <ul style="list-style:none; margin:0; text-align:center;">
                <li><t t-esc="company.x_studio_oci_conf_formejurid"/> - N° siren : <t t-esc="company.x_studio_oci_conf_siren"/> - APE <t t-esc="company.ape"/> - Identification
                    <t t-esc="company.country_id.vat_label or 'Tax ID'"/>:

                    <span t-field="company.vat"/>
                </li>
                <li t-if="company.siret">Siège social : <span t-field="company.x_studio_oci_conf_juridique"/> ∙
                    <span t-field="company.street"/> ∙
                    <span t-field="company.street2"/>
                    <span t-field="company.zip"/> ∙
                    <span t-field="company.city"/>
                </li>
            </ul>
        </div>
    </div>
    </template>

    <template id="report_intervention_request">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="amb_sale.intervention_request_document" t-lang="o.partner_id.lang"/>
        </t>
      </t>
    </template>

    <template id="amb_sale.intervention_request_document">
      <t t-call="amb_sale.intervention_request_layout">
          <div class="page">
            <div class="row">
                <div class="col-5">
                    <div>
                        <div name="company_address" class="text-center">
                            <style>
                              .small-text{
                                font-size:10px;
                              }
                              .medium-text{
                                font-size:14px;
                                font-weight:bold;
                              }
                              .large-text{
                                font-size:18px;
                              }
                            </style>
                            <div class="row">
                                <img src="amb_sale/static/description/logo-ambiance-fondblanc.bmp" style="width:100%;"/>
                                <t t-set="company" t-value="o.company_id"/>
                            </div>
                            <div class="row">
                                <div class="col">
                                        <span class="medium-text" t-field="company.x_studio_oci_conf_juridique"/>
                                        <br/>
                                        <strong>
                                            <span t-esc="company.website.replace('http://', '').replace('https://', '')"/>
                                        </strong>
                                        <br/>
                                        <span class="small-text">Qualibois </span>
                                        <span class="small-text" t-field="company.x_studio_oci_conf_qualibois"/>
                                        <br/>
                                        <span class="small-text">Garantie RC et Décenale : </span>
                                        <span class="small-text" t-field="company.x_studio_assurance"/>
                                        <br/>
                                        <strong class="medium-text"><span class="small-text" t-field="company.x_studio_oci_conf_rib"/> <br/>
                                        <span class="small-text" t-field="company.x_studio_oci_conf_bic"/></strong>
                                    </div>
                            </div>
                            <h6 class="text-uppercase mt-3 text-left">
                                <strong>Demande d'intervention</strong>
                            </h6>
                            <p class="text-left">
                BC n°
                                <span t-field="o.name"/> du
                                <strong>
                                    <span t-esc="o.date_order.strftime('%d/%m/%Y')"/>
                                </strong>
                            </p>
                        </div>
                        <t t-raw="0"/>
                    </div>
                </div>
                <div class="col-7">
                    <div class="row" style="height:20px;"/>
                    <div class="row mt-1">
                        <div class="col-12">
                            <div class="text-left small-text">
                                <p>
                                        <span t-field="company.city"/> :
                                        <span t-field="company.street"/> ∙
                                        <span t-field="company.zip"/>
                                        <span t-field="company.city"/> ∙
                                                    Siret :
                                        <span t-field="company.siret"/>
                                        <br/>
                                                    Tél:
                                        <span style="font-size:15px;" t-field="company.phone"/>
                                        <t t-if="company.second_partner_id">
                                        <br/>
                                        <br/>
                                        <span t-field="company.second_partner_id.city"/> :
                                        <span t-field="company.second_partner_id.street"/> ∙
                                        <span t-field="company.second_partner_id.zip"/>
                                        <span t-field="company.second_partner_id.city"/> ∙
                                                    Siret :
                                        <span t-field="company.second_partner_id.x_studio_siret_contact"/>
                                        <br/>
                                                    Tél:

                                        <span style="font-size:15px;" t-field="company.second_partner_id.phone"/>
                                    </t>
                                    </p>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-6">
                            <table class="table table-sm  table-borderless">
                                <thead>
                                    <tr>
                                        <th class="text-center ">
                                            <span t-if="not o.x_studio_oci_saleorder_yourref" t-field="o.x_studio_oci_saleorder_yourref"/>
                                            <br/>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm table-borderless">
                                <thead>
                                    <tr>
                                        <th class="text-center small-text">
                                            <span t-if="o.x_studio_oci_saleorder_technicien" t-field="o.x_studio_oci_saleorder_technicien"/> 
                                            <span t-if="o.commitment_date" t-esc="o.commitment_date.strftime('%d/%m/%Y')"/>
                                            <br/>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-12">
                            <div class=" border border-dark">
                                <div class="col text-center">
                                    <t t-set="partner_id" t-value="o.partner_id"/>
                                    <p class="text-center">
                                        <span t-field="partner_id.name"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <span t-field="partner_id.street"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <span t-field="partner_id.street2"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <span t-field="partner_id.zip"/> <span t-field="partner_id.city"/>
                                        <br/>
                                        <span t-if="partner_id.country_id" t-field="partner_id.country_id.name"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <t t-if="partner_id.phone">
                                            <strong>Tél:</strong>
                                            <span t-field="partner_id.phone"/>
                                        </t>
                                        <t t-if="partner_id.mobile">
                                            <strong>Tél:</strong>
                                            <span t-field="partner_id.mobile"/>
                                        </t>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row border mt-2 border-dark">
                <div class="col">
                    <div class="row">
                        <div class="col-8">
                            <div class="medium-text">
                                <u>
                                    <strong>Historique Client:</strong>
                                </u>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-right medium-text">
                                <strong>N° série:

                                    <span t-field="o.partner_id.x_studio_numero_serie_equipement_contact"/>
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col small-text">
                            <span t-field="o.partner_id.customer_history"/>
                            <br t-if="not o.partner_id.customer_history"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <table class="table table-sm border border-dark small-text">
                    <thead>
                        <th class="border border-dark">
                            <strong>Réf</strong>
                        </th>
                        <th class="border border-dark">
                            <strong>Libellé</strong>
                        </th>
                        <th class="border border-dark">
                            <strong>Qté</strong>
                        </th>
                        <th class="border border-dark">
                            <strong>Prix unit HT</strong>
                        </th>
                        <th class="border border-dark">
                            <strong>Discount</strong>
                        </th>
                        <th class="border border-dark">
                            <strong>Prix TTC</strong>
                        </th>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="l">
                            <td class="border border-dark" t-if="l.display_type == 'line_note'" colspan="5">
                                <span t-field="l.name"/>
                            </td>
                            <t t-if="l.display_type != 'line_note'">
                                <td class="border border-dark">
                                    <span t-field="l.product_id.default_code"/>
                                </td>
                                <td class="border border-dark">
                                    <span t-esc="l.name.split(']',1)[1] if ']' in l.name else l.name"/>
                                </td>
                                <td class="border border-dark">
                                    <span t-esc="'%.1f'%(l.product_uom_qty)"/>
                                </td>
                                <td class="border border-dark">
                                    <span t-field="l.price_unit"/>
                                    <span t-field="l.currency_id.symbol"/>
                                </td>
                                <td class="border border-dark">
                                    <span t-field="l.discount" t-options='{"widget":"float", "precision":2}'/>
                                </td>
                                <td class="border border-dark">
                                    <span t-field="l.price_total"/>
                                </td>
                            </t>
                        </tr>
                    </tbody>
                </table>
            </div>
            </div>
      </t>
    </template>

  </data>
</odoo>
