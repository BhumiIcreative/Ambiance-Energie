<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="subscription_wood_pellet_view_list" model="ir.ui.view">
        <field name="name">.subscription.wood.pellet.tree</field>
        <field name="model">subscription.wood.pellet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="type_subscription"/>
                <field name="price"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="subscription__wood_pellet_view_form" model="ir.ui.view">
        <field name="name">subscription.wood.pellet.form</field>
        <field name="model">subscription.wood.pellet</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                <h1><field name="name"/></h1>
                <group>
                  <group>
                    <field name="partner_id"/>
                  </group>
                  <group>
                    <field name="amount" readonly="1"/>
                  </group>
                </group>
                <group>
                  <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                  </group>
                  <group>
                    <field name="type_subscription"/>
                    <field name="price"/>
                    <field name="renewable"/>
                  </group>
                </group>
              </sheet>
            </form>
          </field>
        </record>

        <record id="sequence_id" model="ir.sequence">
         	<field name="name">Subscription</field>
         	<field name="code">sub_seq</field>
         	<field name="padding">3</field>
         	<field name="prefix">Abo</field>
         	<field name="suffix"></field>
        </record>

        <record id="subscription_action" model="ir.actions.act_window">
            <field name="name">Subscriptions</field>
            <field name="res_model">subscription.wood.pellet</field>
            <field name="view_mode">tree,form</field>
        </record>
</odoo>
