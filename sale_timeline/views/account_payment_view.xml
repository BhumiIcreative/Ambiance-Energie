<odoo>
  <record model="ir.ui.view" id="account_payment_timeline_search_view">
    <field name="name">Account payment timeline search</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_search"/>
    <field name="arch" type="xml">
      <field name="journal_id" position="after">
        <field name="payment_method_id"/>
      </field>
    </field>
  </record>
  <record model="ir.ui.view" id="account_payment_timeline_tree_view">
    <field name="name">Account payment timeline search</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_tree"/>
    <field name="arch" type="xml">
      <tree position="attributes">
        <attribute name="edit">true</attribute>
        <attribute name="multi_edit">1</attribute>
      </tree>
      <field name="amount" position="attributes">
        <attribute name="readonly">1</attribute>
      </field>
    </field>
  </record>
  <record model="ir.ui.view" id="account_payment_timeline_form_view">
    <field name="name">Account payment timeline form</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <field name="company_id" position="after">
        <field name="oci_point_of_sale"/>
      </field>
      <field name="payment_method_id" position="after">
        <field name="payment_instrument_id"/>
      </field>
    </field>
  </record>
</odoo>
