<odoo>
    <template id="custom_external_layout" t-name="custom_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="amb_account.custom_external_layout_standard">
            <t t-raw="0"/>
        </t>
    </template>
    <template id="custom_external_layout_standard" t-name="custom_external_layout_standard">
        <div class="header">
            <div class="row">
                <div class="col-5">
                    <div>
                        <div name="company_address" class="text-center">
                            <style>
                                .small-text{
                                font-size:10px;
                                }
                                .medium-text{
                                font-size:14px;
                                font-weight:bold;
                                }
                                .large-text{
                                font-size:18px;
                                }
                            </style>
                            <div class="row">
                                <img src="amb_sale/static/description/logo-ambiance-fondblanc.bmp" style="width:100%;"/>
                                <t t-set="company" t-value="o.company_id"/>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <span class="medium-text" t-field="company.x_studio_oci_conf_juridique"/>
                                    <br/>
                                    <strong>
                                        <span t-esc="company.website.replace('http://', '').replace('https://', '')"/>
                                    </strong>
                                    <br/>
                                    <span class="small-text">Qualibois</span>
                                    <span class="small-text" t-field="company.x_studio_oci_conf_qualibois"/>
                                    <br/>
                                    <span class="small-text">Garantie RC et Décenale :</span>
                                    <span class="small-text" t-field="company.x_studio_assurance"/>
                                    <br/>
                                    <!--<strong class="medium-text">CELCA REIMS FR7615135205900800092576879 Swift : CEPAFRPP513</strong>-->
                                    <strong class="medium-text">
                                        <span class="small-text" t-field="company.x_studio_oci_conf_rib"/>
                                        <br/>
                                        <span class="small-text" t-field="company.x_studio_oci_conf_bic"/>
                                    </strong>
                                </div>
                            </div>
                            <table class="table table-sm table-bordered border-dark">
                                <tbody>
                                    <tr>
                                        <td class="border-dark text-center" style="font-size:10px;">Votre référence</td>
                                    </tr>
                                    <tr>
                                        <td t-if="o.ref" class="border-dark text-center small-text">
                                            <span t-field="o.ref"/>
                                        </td>
                                        <td t-else="else" class="border-dark text-center">
                                            <br/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col text-left">
                                    <strong>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice
                                        </span>
                                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                                        <span t-if="o.name != '/'" t-field="o.name"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-7">
                    <div class="row" style="height:20px;"/>
                    <div class="row mt-1">
                        <div class="col-12">
                            <div class="text-left small-text">
                                <p>
                                    <span t-field="company.city"/>
                                    :
                                    <span t-field="company.street"/>
                                    ∙
                                    <span t-field="company.zip"/>
                                    <span t-field="company.city"/>
                                    ∙
                                    Siret :
                                    <span t-field="company.siret"/>
                                    <br/>
                                    Tél:
                                    <span style="font-size:15px;" t-field="company.phone"/>
                                    <t t-if="company.second_partner_id">
                                        <br/>
                                        <br/>
                                        <span t-field="company.second_partner_id.city"/>
                                        :
                                        <span t-field="company.second_partner_id.street"/>
                                        ∙
                                        <span t-field="company.second_partner_id.zip"/>
                                        <span t-field="company.second_partner_id.city"/>
                                        ∙
                                        Siret :
                                        <span t-field="company.second_partner_id.x_studio_siret_contact"/>
                                        <br/>
                                        Tél:

                                        <span style="font-size:15px;" t-field="company.second_partner_id.phone"/>
                                    </t>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-6">
                               <table t-if="o.partner_id.ref" class="table table-sm table-borderless" >
                                   <thead>
                                       <tr>
                                           <th class=" text-center small-text">
                                               <span t-field="o.partner_id.ref"/>
                                               <br/>
                                           </th>
                                       </tr>
                                   </thead>
                               </table>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm table-borderless">
                                <thead>
                                    <tr>
                                        <th class="text-center small-text">
                                            <span t-field="o.invoice_date"/>
                                            <t t-if="o.invoice_date"/>
                                            <br/>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-12">
                            <div class=" border border-dark">
                                <div class="col text-center">
                                    <t t-set="partner_id" t-value="o.partner_id"/>
                                    <p class="text-center">
                                        <span t-field="partner_id.name"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <span t-field="partner_id.street"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <span t-field="partner_id.street2"/>
                                    </p>
                                    <p class="text-center mt-n3">
                                        <span t-field="partner_id.zip"/>
                                        <span t-field="partner_id.city"/>
                                        <br/>
                                        <span t-if="partner_id.country_id" t-field="partner_id.country_id.name"/>
                                    </p>
                                    <!--                                <p class="text-center mt-n3">-->
                                    <!--                                    <t t-if="partner_id.phone">-->
                                    <!--                                        <strong>Tél:</strong>-->
                                    <!--                                        <span t-field="partner_id.phone"/>-->
                                    <!--                                    </t>-->
                                    <!--                                    <t t-if="partner_id.mobile">-->
                                    <!--                                        <strong>Mobile:</strong>-->
                                    <!--                                        <span t-field="partner_id.mobile"/>-->
                                    <!--                                    </t>-->
                                    <!--                                </p>-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div style="padding-bottom: 5px">
                <!-- This div ensures that the address is not cropped by the header. only for first page -->
                <t t-raw="0"/>
            </div>
            <div class="row mt-3" style="page-break-inside: avoid">
                <div class="col-8">
                    <!--                <div class="row">-->
                    <!--                    <div class="col-12">-->
                    <!--                        <div class="border border-dark">-->
                    <!--                            <strong>Informations:</strong>-->
                    <!--                            <table class="table table-borderless border-dark table-sm mb-n1">-->
                    <!--                                <tbody>-->
                    <!--                                    <tr>-->
                    <!--                                        <td>-->
                    <!--                                            <small>Nombre de colis:-->
                    <!--                                                <span t-field="o.package_count"/>-->
                    <!--                                            </small>-->
                    <!--                                        </td>-->
                    <!--                                        <td>-->
                    <!--                                            <small>Poids:-->
                    <!--                                                <span t-field="o.weight"/> Kgs-->
                    <!--                                            </small>-->
                    <!--                                        </td>-->
                    <!--                                        <td>-->
                    <!--                                            <small>Volume:-->
                    <!--                                                <span t-field="o.volume"/>㎥-->
                    <!--                                            </small>-->
                    <!--                                        </td>-->
                    <!--                                    </tr>-->
                    <!--                                    <tr>-->
                    <!--                                        <td>-->
                    <!--                                            <small>Port:-->
                    <!--                                                <span t-field="o.port"/>-->
                    <!--                                            </small>-->
                    <!--                                        </td>-->
                    <!--                                        <td>-->
                    <!--                                            <small>Expédié par:-->
                    <!--                                                <span t-field="o.sent_by"/>-->
                    <!--                                            </small>-->
                    <!--                                        </td>-->
                    <!--                                        &lt;!&ndash; <td><small>Port WT: <span t-field="o.port"/></small></td><td><small>Port TI: <span t-field="o.port"/></small></td> &ndash;&gt;-->
                    <!--                                    </tr>-->
                    <!--                                </tbody>-->
                    <!--                            </table>-->
                    <!--                        </div>-->
                    <!--                    </div>-->
                    <!--                </div>-->
                    <div class="row mt-1">
                        <div class="col-7">
                            <table class="table table-sm table-bordered border-dark">
                                <thead>
                                    <tr>
                                        <th class="border-dark text-center">
                                            <small>
                                                <strong>Date d'échéance</strong>
                                            </small>
                                        </th>
                                        <th class="border-dark text-center">
                                            <small>
                                                <strong>Methode de paiement</strong>
                                            </small>
                                        </th>
                                        <th class="border-dark text-center">
                                            <small>
                                                <strong>Montant</strong>
                                            </small>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.payment_timeline_ids" t-as="l">
                                        <td class="border-dark text-center">
                                            <small t-field="l.date"/>
                                        </td>
                                        <td class="border-dark text-left">
                                            <small t-field="l.payment_instrument_id.name"/>
                                        </td>
                                        <td class="border-dark text-center">
                                            <small t-field="l.amount"/>
                                        </td>
                                    </tr>
                                    <tr t-if="not o.payment_timeline_ids">
                                        <td class="border-dark text-center" height="22px;">
                                            <small t-field="o.invoice_date_due"/>
                                        </td>
                                        <td class="border-dark text-center">
                                            <small t-field="o.invoice_payment_term_id.name"/>
                                        </td>
                                        <td class="border-dark text-center">
                                            <small t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-5">
                            <table class="table table-sm table-bordered border-dark">
                                <thead>
                                    <tr>
                                        <th class="border-dark text-center" style="white-space:nowrap;">
                                            <small>
                                                <strong>Base HT</strong>
                                            </small>
                                        </th>
                                        <th width="10%" class="border-dark text-center">
                                            <small>
                                                <strong>Taux</strong>
                                            </small>
                                        </th>
                                        <th class="border-dark text-center">
                                            <small>
                                                <strong>Prix TVA</strong>
                                            </small>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.amount_by_group" t-as="l">
                                        <td class="border-dark text-right">
                                            <small t-esc="'%.2f'%(l[2])"/>
                                        </td>
                                        <td class="border-dark text-right">
                                            <!--                                        <small t-esc="round(l[1] / l[2] * 100,2)"/>-->
                                            <small t-esc="l[0].replace('TVA ','')"/>
                                        </td>
                                        <td class="border-dark text-right">
                                            <small t-esc="'%.2f'%(l[1])"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <table class="table table-sm table-borderless border border-dark">
                        <tbody>
                            <tr>
                                <td class="border-dark text-left">
                                    <small>Total HT</small>
                                </td>
                                <td class="border-dark text-right">
                                    <small t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="border-dark text-left">
                                    <small>Montant TVA</small>
                                </td>
                                <td class="border-dark text-right">
                                    <small t-field="o.amount_tax"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="border-dark text-left">
                                    <small>
                                        <strong>Total TTC</strong>
                                    </small>
                                </td>
                                <td class="border-dark text-right">
                                    <strong>
                                        <small t-field="o.amount_total"/>
                                    </strong>
                                </td>
                            </tr>
                            <t t-if="o.edf_prime">
                                <t t-if="o.state != posted">
                                    <tr>
                                        <td class="border-dark text-left">
                                            <small>
                                                <strong><p>Prime CEE EDF <br/>(SIREN 552 081 317)</p></strong>
                                            </small>
                                        </td>
                                        <td class="border-dark text-right">
                                            <strong>
                                                <small t-field="o.edf_prime"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <!-- <tr><td class="border-dark text-left"><small><strong>Accompte versé</strong></small></td><td class="border-dark text-right"><strong><small t-field="o.amount_left_to_pay"/></strong></td></tr> -->
                            <!--<t t-if="o.payment_state != 'invoicing_legacy'">-->
                            <t t-if="o.state == posted">
                                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <tr>
                                        <td class="border-dark text-left">
                                            <small>
                                                <t t-esc="'PRIME CEE EDF' if payment_vals['ref'].find('PRIME CEE EDF') != -1 else 'Payé le '+payment_vals['date'].strftime('%m/%d/%Y')"/>
                                            </small>
                                        </td>
                                        <td class="border-dark text-right">
                                            <small>
                                                <span t-esc="payment_vals['amount']"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </small>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <!--</t>-->
                            <tr>
                                <td class="border-dark text-left">
                                    <small>
                                        <strong>Reste à payer</strong>
                                    </small>
                                </td>
                                <td class="border-dark text-right">
                                    <strong>
                                        <small t-field="o.amount_residual"/>
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="footer o_standard_footer" style="font-size:15px;">
            <div class="row">
                <div class="col-1" style="border-top: 1px solid black;font-size:12px;"></div>
                <div class="col-10" style="border-top: 1px solid black;font-size:12px;">
                    <ul style="list-style:none; margin:0; text-align:center;">
                        <li>
                            <t t-esc="company.x_studio_oci_conf_formejurid"/>
                            - N° siren :


                            <t t-esc="company.x_studio_oci_conf_siren"/>
                            - APE


                            <t t-esc="company.ape"/>
                            - Identification


                            <t t-esc="company.country_id.vat_label or 'Tax ID'"/>:


                            <span t-field="company.vat"/>
                        </li>
                        <li t-if="company.siret">Siège social :


                            <span t-field="company.x_studio_oci_conf_juridique"/>
                            ∙


                            <span t-field="company.street"/>
                            ∙


                            <span t-field="company.street2"/>
                            <span t-field="company.zip"/>
                            ∙


                            <span t-field="company.city"/>
                        </li>
                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page:


                            <span class="page"/>
                            /


                            <span class="topage"/>
                        </div>
                    </ul>
                </div>
                <div class="col-1" style="border-top: 1px solid black;font-size:12px;">
                    <t t-if="o.type == 'out_invoice'">
                        <div name="qr_code" class="text-right">
                            <div t-if="o.oci_point_of_sale" class="row">
                                <span t-field="o.oci_point_of_sale.x_studio_qrcode_payment"
                                          t-options="{'widget': 'image'}"

                                style="width:60px;display:inline-block;"/>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </template>
</odoo>
