<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="amb_sale_view_form" model="ir.ui.view">
      <field name="priority" eval="10"/>
      <field name="name">amb.sale.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">

          <xpath expr="//label[@for='advance']/.." position="before">
            <label for="edf_prime" attrs="{'invisible':[
                ('type_order', '!=', 'sto'),
            ]}"/>
            <div class="oe_inline o_td_label" attrs="{'invisible':[('type_order', '!=', 'sto')]}">
              <button class="col-6 btn btn-secondary" name="action_add_edf_prime" states="draft,sent" type="object" string="Modifier"/>
              <field class="col-6 text-right pr-0" name="edf_prime"/>
            </div>
          </xpath>

      </field>
  </record>

</odoo>
